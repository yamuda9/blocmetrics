<h1><%= @registered_applications.name %></h1>

submitted <%= time_ago_in_words(@registered_applications.created_at) %> ago

<br />

<%= link_to "Edit Application", edit_registered_application_path, class: 'btn btn-success' %>
<%= link_to "Delete Application", @registered_applications, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this application?' } %>

<div class="row">
  <div class="col-md-8">
    <p class="lead">
      <br />
      Website: <a href="<%= @registered_applications.url %>"><%= @registered_applications.url %></a>
    </p>

    <p class="lead">
      <%= @registered_applications.events.count %> Event(s):
    </p>

    <% @registered_applications.events.each do |event| %>
      <%= event.name.capitalize %>
      <br>
    <% end %>
  </div>
</div>
