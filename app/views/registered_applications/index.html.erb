<h1>Registered Applications</h1>

<div class="row">
  <div class="col-md-4">
    <%= link_to "Register New Application", new_registered_application_path, class: 'btn btn-success' %>
  </div>
  <br />
  <br />
  <br />
  <div class="col-md-8">
    <% @registered_applications.each do |reg_app| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to reg_app.name, reg_app %>
          </h4>
          <small>
            <% reg_app.url %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
</div>
